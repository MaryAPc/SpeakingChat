<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/main_layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical">

		<Button
			android:id="@+id/activity_chat_list_button_connect_broadcast"
			style="@style/ThemeButton"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_gravity="center"
			android:layout_margin="@dimen/small_margin"
			android:text="@string/connect_to_broadcast"
			android:visibility="visible" />

		<android.support.v7.widget.RecyclerView
			android:id="@+id/activity_chat_list_recycler_list"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="visible" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/activity_chat_list_linear_layout_play_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="6dp"
		android:layout_marginTop="6dp"
		android:gravity="center"
		android:orientation="horizontal"
		android:visibility="gone"
		tools:visibility="visible">

		<ImageButton
			android:id="@+id/activity_chat_list_button_play"
			style="@style/ThemeButton"
			android:layout_width="70dp"
			android:layout_height="35dp"
			android:layout_marginRight="@dimen/small_margin"
			android:src="@drawable/ic_play_arrow_black_36dp"
			android:tint="@color/dark_grey" />

		<ImageButton
			android:id="@+id/activity_chat_list_button_stop"
			style="@style/ThemeButton"
			android:layout_width="70dp"
			android:layout_height="35dp"
			android:layout_marginLeft="@dimen/small_margin"
			android:src="@drawable/ic_stop_black_36dp"
			android:tint="@color/dark_grey" />

	</LinearLayout>

	<WebView
		android:id="@+id/activity_chat_list_web_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="gone" />


</LinearLayout>