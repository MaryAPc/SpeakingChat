<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@+id/main_layout_coordinator"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<android.support.design.widget.AppBarLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:theme="@style/Theme.DesignDemo.AppBarOverlay">
			
			<android.support.v7.widget.Toolbar
				android:id="@+id/activity_toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:background="?attr/colorPrimary"
				app:popupTheme="@style/Theme.DesignDemo.PopupOverlay" />
		
		</android.support.design.widget.AppBarLayout>
		
		<include
			android:id="@+id/activity_app_bar_chat_content"
			layout="@layout/activity_chat_list" />
		
		<FrameLayout
			android:id="@+id/activity_app_bar_frame_layout_container"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		
		</FrameLayout>
	
	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>