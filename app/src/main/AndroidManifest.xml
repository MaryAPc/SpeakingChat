<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.maryapc.speakingchat"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".MyApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<meta-data
			android:name="io.fabric.ApiKey"
			android:value="f95c73badfcf2247232c7ea5fecf04978987104d" />
		<activity
			android:name=".ChatListActivity"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".utils.ChatPreferences"
			android:screenOrientation="portrait"/>
		<activity android:name=".GooglePlayActivity"
			android:screenOrientation="portrait" />
		<activity android:name=".AboutAppActivity"
			android:screenOrientation="portrait" />
	</application>

</manifest>